@model IEnumerable<Order>

   
<div class="container">
    
    @if (Model != null && Model.Count() > 0)
    {
        
        <div>
            <h4>Orders</h4>
            <table class="table table-striped">
                <tr>
                    <th>Order Id</th>
                    <th>Order Date</th>
                    <th>Order Status</th>
                    <th>Ordered By</th>
                    <th>Actions</th>
                </tr>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                        <td>@order.OrderStatus.StatusName</td>
                        <td>@order.User.FirstName @order.User.LastName</td>
                        <td>

                            <a asp-action="Edit" asp-controller="UserOrder" asp-route-id="@order.Id"><i class="bi bi-pencil-square"></i></a>
                            / <a asp-action="DeleteOrder" asp-controller="UserOrder" asp-route-id="@order.Id"><i class="bi bi-x-lg"></i></a>
                            
                        </td>
                        
                       
                    </tr>
                }
            </table>
            
        </div>
            
     
    }
    else
    {
        <h4>No Orders</h4>
    }
    
</div>